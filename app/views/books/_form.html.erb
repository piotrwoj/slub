<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> nie pozwoliły na zapisanie książki:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :hidden_note %><br>
    <%= f.text_area :hidden_note %>
  </div>
  <div class="field">
    <%= f.label :reserved %><br>
    <%= f.check_box :reserved, onchange: "alert('Zmiana tego pola spowoduje anulowanie istniejącej rezerwacji lub utworzenie nowej rezerwacji')" %>
  </div>
  <div class="actions">
    <%= f.submit 'Zapisz' %>
  </div>
<% end %>
