<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Lista książek</h1>

<table>
  <thead>
    <tr>
      <th>Tytuł</th>
      <th>Autor</th>
      <!-- <th>Opis</th> -->
      <th>Zarezerwowana</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <!-- <td><%= book.description %></td> -->
        <td><%= book.reserved %></td>
        <td><%= link_to 'Pokaż', book %></td>
        <% if logged? %>
        <td><%= link_to 'Edytuj', edit_book_path(book) %></td>
        <td><%= link_to 'Usuń', book, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged? %>
<%= link_to 'Dodaj książkę', new_book_path %>
<% end %>