<!DOCTYPE html>
<html>
<head>
  <title>Strona ślubna Kingi i Piotra</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js"></script>
  <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-64442633-1', 'auto');
	  ga('send', 'pageview');
  </script>
</head>
<body>

<div id='container'>
	<div id='flowers_div'>
		<%= image_tag "flowers.jpg", id: 'flowers' %>
	</div>
	<div id='menu'>
		<ul>
			<li>
				<%= link_to 'Zaproszenie', root_url %>
			</li>
			<li>
				<%= link_to 'Jak dojechać', dojazd_url %>
			</li>
			<li>
				<%= link_to 'Zamiast kwiatów', books_url %>
			</li>
			<% if admin? %>
			<li>
				<%= link_to 'Admin', users_url %>
			</li>
			<%= link_to 'Wyloguj się', logout_url, method: :delete %>
			<% end %>
		</ul>
	</div>
	<div id='data' class='<%= controller.controller_name %>'>
	<div style="clear:both"></div>
	<%= yield %>

	<%#= "<!-- #{'x<br>' * 60} -->".html_safe %>

	</div>
</div>

</body>
</html>
