<%= flash_fields %>

<h1>Lista administratorów</h1>

<table>
  <thead>
    <tr>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= link_to 'Pokaż', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Na pewno usunąć?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj administratora', new_user_path %>

<h1>Ustawienia</h1>

<% if Settings.reservations == 'on' %>
  <%= button_to 'Zablokuj możliwość rezerwacji książek', disable_reservations_url %>
<% else %>
  <%= button_to 'Włącz możliwość rezerwacji książek', enable_reservations_url %>
<% end %>